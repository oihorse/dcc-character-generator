	<g:FlowPanel styleName="{style.abilitiesPanel}">
		<container:HBoxLayoutContainer>
			<container:child>
				<g:Label text="Strength" styleName="{style.abilityRight}"></g:Label>
			</container:child>
			<container:child>
				<g:TextBox ui:field="strengthScore" styleName="{style.abilityLeft}"></g:TextBox>
			</container:child>
		</container:HBoxLayoutContainer>
		<container:HBoxLayoutContainer styleName="{style.modifierBox}">
			<container:child>
				<g:Label text="modifier:" styleName="{style.modifierRight}"></g:Label>
			</container:child>
			<container:child>
				<g:TextBox ui:field="strengthModifier" styleName="{style.modifierLeft}"></g:TextBox>
